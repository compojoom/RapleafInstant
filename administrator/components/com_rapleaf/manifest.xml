<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5" method="upgrade">
	<name>Rapleaf</name>
	<author>Compojoom</author>
	<creationDate>2011-09-02</creationDate>
	<copyright>(C) 2011 Compojoom.com All rights reserved.	</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail>services@compojoom.com</authorEmail>
	<authorUrl>http://compojoom.com</authorUrl>
	<version>1.0.1</version>
	<description>Rapleaf API integration for Joomla</description>
	<administration>
		<menu img="../media/com_rapleaf/images/rapleaf-16px.png">COM_RAPLEAF</menu>
		<files folder="administrator/components/com_rapleaf">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>includes</folder>
			<folder>libraries</folder>
			<folder>liveupdate</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>index.html</filename>
			<filename>rapleaf.php</filename>
			<filename>toolbar.rapleaf.php</filename>
			<filename>changelog.php</filename>
		</files>
		<files>
			<filename>index.html</filename>
			<filename>manifest.xml</filename>
			<filename>rapleaf.php</filename>
		</files>
		<languages folder="administrator/language/">
			<language tag="en-GB">en-GB/en-GB.com_rapleaf.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_rapleaf.menu.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_rapleaf.sys.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_rapleaf.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_rapleaf.menu.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_rapleaf.sys.ini</language>
		</languages>
	</administration>
	<media destination="com_rapleaf" folder="media/com_rapleaf">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>
	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
</install>
